<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="aeroxr1.core.pushPoc.PushActivity">

    <Button
        android:id="@+id/GetId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get The Instance Id"
        app:layout_constraintBottom_toTopOf="@+id/getIdSync"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/getIdSync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get The Instance Id Sync Way"
        app:layout_constraintBottom_toTopOf="@+id/getToken"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GetId" />

    <Button
        android:id="@+id/getToken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Token"
        app:layout_constraintBottom_toTopOf="@+id/blackBoard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getIdSync" />

    <TextView
        android:id="@+id/blackBoard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getToken" />
</androidx.constraintlayout.widget.ConstraintLayout>